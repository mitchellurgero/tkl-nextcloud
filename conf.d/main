#!/bin/bash -ex

DB_NAME=nextcloud
DB_USER=nextcloud
DB_PASS=$(mcookie)

ADMIN_NAME=admin
ADMIN_PASS=turnkey

WEBROOT=/usr/share/nextcloud

# unpack tarball to webroot and set permissions
unzip /usr/local/src/latest.zip -d /var/www/
mv /var/www/nextcloud* $WEBROOT
rm -f /usr/local/src/nextcloud*

# tweak footer
TEMPLATE=$WEBROOT/core/templates/layout.guest.php
sed -i "s|<footer>.*|<footer><p class='info' style='width: auto \!important;'><a href='https://urgero.org/howto/linux/TKL-Nextcloud.md'>Nextcloud Appliance (Autobuild)(URGERO.ORG)</a> \&ndash; Powered by <a href='https://urgero.org/tkl.md'>TurnKey Linux/urgero.org</a></p></footer>|" $TEMPLATE

# configure apache
a2dissite 000-default
a2ensite nextcloud.conf
a2enmod rewrite
a2enmod headers
a2enmod env
a2enmod dir
a2enmod mime

# start services
service mysql start
service apache2 start

# setup the database
MYSQL_BATCH="mysql --user=root --password=$MYSQL_PASS --batch"
MYSQL_ADMIN="mysqladmin --user=root --password=$MYSQL_PASS"

$MYSQL_ADMIN create $DB_NAME
$MYSQL_BATCH --execute "grant all privileges on $DB_NAME.* to $DB_USER@localhost identified by '$DB_PASS'; flush privileges;"

# command-line install
chown -R root:root $WEBROOT
cd $WEBROOT
php occ maintenance:install --database "mysql" \
--database-name "$DB_NAME"  --database-user "$DB_USER" --database-pass "$DB_PASS" \
--admin-user "$ADMIN_NAME" --admin-pass "$ADMIN_PASS"

chown -R root:root $WEBROOT
chown -R www-data:www-data /usr/share/nextcloud/{config,apps,data}

# stop services
service mysql stop
service apache2 stop

#password change in inithooks fails with the default 32M limit
sed -i s/32M/128M/ /etc/php5/cli/php.ini
